# Doosan M0609 Robot Web Dashboard 환경 설정
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# API 서버 설정
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000

# MQTT 브로커 설정
REACT_APP_MQTT_BROKER_URL=ws://localhost:9001
REACT_APP_MQTT_CLIENT_ID=robot_dashboard_client

# 로봇 연결 설정
REACT_APP_ROBOT_IP=192.168.137.100
REACT_APP_ROBOT_PORT=12345

# UI 설정
REACT_APP_THEME=auto
REACT_APP_ANIMATIONS=true

# 개발 모드 설정
REACT_APP_MOCK_ROBOT=false
REACT_APP_SHOW_METRICS=false
REACT_APP_LOG_LEVEL=info

# 원격 로깅 (선택사항)
REACT_APP_REMOTE_LOGGING=false

# 포트 설정 (개발 서버)
PORT=3000

# HTTPS 설정 (선택사항)
# HTTPS=true
# SSL_CRT_FILE=path/to/certificate.crt
# SSL_KEY_FILE=path/to/private.key

# 프록시 우회 (개발용)
# SKIP_PREFLIGHT_CHECK=true

# 소스맵 생성 (프로덕션)
GENERATE_SOURCEMAP=false