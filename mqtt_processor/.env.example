# MQTT Processor Environment Variables for EMQX Cloud

# EMQX Cloud SSL/TLS Connection
MQTT_HOST=p021f2cb.ala.asia-southeast1.emqxsl.com
MQTT_PORT=8883
MQTT_USERNAME=Rokey
MQTT_PASSWORD=1234567

# WebSocket Server
WS_PORT=8080

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=data/logs/mqtt/processor.log

# Data Buffer Configuration
MAX_BUFFER_SIZE=2000
DATA_RETENTION_HOURS=48

# Connection Settings
RECONNECT_INTERVAL=5000
MAX_RECONNECT_ATTEMPTS=10
HEARTBEAT_INTERVAL=30000
CONNECT_TIMEOUT=30000

# Topic Configuration
ROS2_TOPIC_LIST=ros2_topic_list
WEIGHT_SENSOR_TOPIC=topic
TARGET_CONCENTRATION_TOPIC=web/target_concentration
ROBOT_CONTROL_TOPIC=robot/control/+
SYSTEM_HEALTH_TOPIC=system/health

# Security Settings (for production)
ENABLE_TLS=true
REJECT_UNAUTHORIZED=true

# Performance Settings
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=5000
MQTT_KEEPALIVE=60

# Development Settings
DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
ENABLE_MOCK_DATA=false
