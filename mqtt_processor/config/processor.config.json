{
  "mqtt": {
    "connection": {
      "host": "p021f2cb.ala.asia-southeast1.emqxsl.com",
      "port": 8883,
      "protocol": "mqtts",
      "username": "",
      "password": "",
      "clientId": "robot_dashboard_processor",
      "reconnectPeriod": 5000,
      "connectTimeout": 30000,
      "keepalive": 60,
      "clean": true,
      "rejectUnauthorized": false
    },
    "topics": {
      "ros2_topic_list": {
        "name": "ros2_topic_list",
        "qos": 1,
        "retain": true,
        "description": "ROS2 전체 토픽 목록을 JSON으로 전송하는 메시지"
      },
      "weight_sensor": {
        "name": "test",
        "qos": 0,
        "retain": false,
        "description": "외부 무게 센서 데이터"
      },
      "target_concentration": {
        "name": "web/target_concentration",
        "qos": 1,
        "retain": true,
        "description": "사용자가 설정한 목표 농도 값"
      },
      "robot_control": {
        "name": "robot/control/+",
        "qos": 2,
        "retain": false,
        "description": "로봇 제어 명령 메시지 (예: MoveJ, Stop 등)"
      },
      "system_health": {
        "name": "system/health",
        "qos": 0,
        "retain": true,
        "description": "시스템 상태 및 하트비트"
      }
    },
    "security": {
      "enable_tls": true,
      "tls_version": "TLSv1.2",
      "verify_certificate": false
    }
  },
  "websocket": {
    "port": 8080,
    "ping_interval": 30000,
    "pong_timeout": 5000,
    "max_clients": 100,
    "compression": false
  },
  "data_processing": {
    "buffer_size": 2000,
    "retention_hours": 48,
    "weight_sensor": {
      "min_value": -1.0,
      "max_value": 100.0,
      "noise_threshold": 0.01,
      "decimal_places": 2
    },
    "concentration": {
      "min_value": 0.0,
      "max_value": 100.0,
      "default_target": 75.0,
      "decimal_places": 1
    },
    "robot_limits": {
      "joint_count": 6,
      "joint_limits": [
        {"min": -360, "max": 360},
        {"min": -360, "max": 360},
        {"min": -158, "max": 158},
        {"min": -360, "max": 360},
        {"min": -360, "max": 360},
        {"min": -360, "max": 360}
      ],
      "workspace": {
        "x": {"min": -1000, "max": 1000},
        "y": {"min": -1000, "max": 1000},
        "z": {"min": 0, "max": 1000}
      }
    },
    "ros2_topics_mapping": {
      "expected_topics": [
        "/clicked_point",
        "/dsr01/alter_motion_stream",
        "/dsr01/dsr_controller2/transition_event",
        "/dsr01/dynamic_joint_states",
        "/dsr01/error",
        "/dsr01/joint_state_broadcaster/transition_event",
        "/dsr01/joint_states",
        "/dsr01/robot_description",
        "/dsr01/robot_disconnection",
        "/dsr01/servoj_rt_stream",
        "/dsr01/servoj_stream",
        "/dsr01/servol_rt_stream",
        "/dsr01/servol_stream",
        "/dsr01/speedj_rt_stream",
        "/dsr01/speedj_stream",
        "/dsr01/speedl_rt_stream",
        "/dsr01/speedl_stream",
        "/dsr01/torque_rt_stream",
        "/initialpose",
        "/move_base_simple/goal",
        "/parameter_events",
        "/rosout",
        "/tf",
        "/tf_static"
      ],
      "expected_json_structure": {
        "timestamp": "string (ISO 8601)",
        "topic_data": {
          "/dsr01/joint_states": "joint position array",
          "/dsr01/error": "error status",
          "/clicked_point": "2D navigation goal",
          "...": "기타 ROS2 토픽 데이터"
        }
      }
    }
  },
  "logging": {
    "level": "info",
    "file": "../data/logs/mqtt/processor.log",
    "max_file_size": "10MB",
    "max_files": 5,
    "console_output": true,
    "timestamp_format": "YYYY-MM-DD HH:mm:ss"
  },
  "performance": {
    "health_check_interval": 60000,
    "memory_warning_threshold": 500,
    "cpu_warning_threshold": 80,
    "enable_monitoring": true
  }
}